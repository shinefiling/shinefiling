<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShineFiling"
        tools:targetApi="31">
        <activity
            android:name=".LoaderActivity"
            android:exported="true"
            android:theme="@style/Theme.ShineFiling.NoActionBar"> <!-- Full screen loader -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ClientHomeActivity"
            android:exported="true" />
        <activity
            android:name=".ServiceCatalogActivity"
            android:exported="false"
             android:theme="@style/Theme.ShineFiling.NoActionBar"/>
    </application>

</manifest>
