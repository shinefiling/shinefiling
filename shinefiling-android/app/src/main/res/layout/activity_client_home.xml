<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background"
    tools:context=".MainActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Top Bar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_header_logo"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"/>

                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/brand_primary" />

                <ImageView
                    android:id="@+id/iv_profile_small"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_circle_gold_light"
                    android:src="@drawable/ic_profile"
                    android:padding="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_notification"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/brand_primary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Hero Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_hero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/top_bar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hero_bg"
                    android:paddingBottom="20dp">

                    <!-- Content -->
                    <TextView
                        android:id="@+id/tv_hero_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="140dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Filing &amp;\nCompliance\nthrough AI"
                        android:textColor="@color/brand_primary"
                        android:textSize="22sp"
                        android:gravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_hero_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Seamless, Secure, Smart."
                        android:textColor="#546E7A"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@id/tv_hero_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_hero_title" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_start_filing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Start Filing"
                        android:textColor="@color/brand_primary"
                        android:textStyle="bold"
                        android:backgroundTint="@color/brand_accent"
                        app:cornerRadius="24dp"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="10dp"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toBottomOf="@id/tv_hero_subtitle"
                        app:layout_constraintEnd_toEndOf="@id/tv_hero_subtitle" />

                    <!-- Stats Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintTop_toBottomOf="@id/btn_start_filing"
                        app:layout_constraintEnd_toEndOf="parent">
                        
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_shield"
                            app:tint="@color/brand_primary"
                            android:layout_marginEnd="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50k+ Trusted"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/brand_primary"
                            android:layout_marginEnd="12dp"/>

                         <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_rocket"
                            app:tint="@color/brand_primary"
                            android:layout_marginEnd="4dp"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.9/5 Rated"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/brand_primary"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions Section -->
            <TextView
                android:id="@+id/tv_quick_actions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-medium"
                android:text="Quick Actions"
                android:textColor="@color/brand_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_hero" />

            <GridLayout
                android:id="@+id/grid_quick_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="16dp"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                app:layout_constraintTop_toBottomOf="@id/tv_quick_actions_title">

                <!-- Item 1: Rent Agreement -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/action_rent"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="#EEF0F2"
                    app:strokeWidth="1dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">
                        <ImageView
                            android:id="@+id/iv_action_icon"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_document"
                            app:tint="@color/icon_blue"
                            android:background="@drawable/bg_rounded_square"
                            android:backgroundTint="@color/bg_icon_blue"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/tv_action_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rent Agreement"
                            android:textSize="13sp"
                            android:textColor="@color/brand_primary"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_action_icon"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Item 2: GST Filing -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/action_gst"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="#EEF0F2"
                    app:strokeWidth="1dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">
                        <ImageView
                            android:id="@+id/iv_action_icon"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_chart"
                            app:tint="@color/icon_purple"
                            android:background="@drawable/bg_rounded_square"
                            android:backgroundTint="@color/bg_icon_purple"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/tv_action_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GST Filing"
                            android:textSize="13sp"
                            android:textColor="@color/brand_primary"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_action_icon"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Item 3: Startup Reg -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/action_startup"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="#EEF0F2"
                    app:strokeWidth="1dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">
                        <ImageView
                            android:id="@+id/iv_action_icon"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_rocket"
                            app:tint="@color/icon_orange"
                            android:background="@drawable/bg_rounded_square"
                            android:backgroundTint="@color/bg_icon_orange"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/tv_action_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Startup Reg"
                            android:textSize="13sp"
                            android:textColor="@color/brand_primary"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_action_icon"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Item 4: Trademark -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/action_trademark"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="#EEF0F2"
                    app:strokeWidth="1dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">
                        <ImageView
                            android:id="@+id/iv_action_icon"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_shield_check"
                            app:tint="@color/icon_gold"
                            android:background="@drawable/bg_rounded_square"
                            android:backgroundTint="@color/bg_icon_gold"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/tv_action_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Trademark"
                            android:textSize="13sp"
                            android:textColor="@color/brand_primary"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_action_icon"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                 <!-- Item 5: Income Tax -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/action_tax"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="#EEF0F2"
                    app:strokeWidth="1dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">
                        <ImageView
                            android:id="@+id/iv_action_icon"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_calculator"
                            app:tint="@color/icon_green"
                            android:background="@drawable/bg_rounded_square"
                            android:backgroundTint="@color/bg_icon_green"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/tv_action_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Income Tax"
                            android:textSize="13sp"
                            android:textColor="@color/brand_primary"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_action_icon"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Item 6: Company/Legal -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/action_company"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="#EEF0F2"
                    app:strokeWidth="1dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">
                        <ImageView
                            android:id="@+id/iv_action_icon"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_gavel"
                            app:tint="@color/icon_green"
                            android:background="@drawable/bg_rounded_square"
                            android:backgroundTint="@color/bg_icon_green"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/tv_action_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Legal Consultation"
                            android:textSize="13sp"
                            android:textColor="@color/brand_primary"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_action_icon"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Recent Status Section -->
            <TextView
                android:id="@+id/tv_recent_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:text="Recent Status"
                android:textColor="#78909C"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/grid_quick_actions" />

            <TextView
                android:id="@+id/tv_recent_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Recent Applications"
                android:textColor="@color/brand_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_recent_status_label" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_recent_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="#EEF0F2"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_recent_status_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_status_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="GST Registration - In Progress"
                        android:textColor="@color/brand_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toStartOf="@id/iv_status_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/iv_status_icon"/>

                    <ImageView
                        android:id="@+id/iv_status_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_circle_gold_light"
                        android:padding="8dp"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/brand_primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/pb_status"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="16dp"
                        android:progress="70"
                        android:progressTint="@color/brand_primary"
                        android:progressBackgroundTint="#E0E0E0"
                        app:layout_constraintTop_toBottomOf="@id/iv_status_icon"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="View Details"
                        android:textColor="@color/brand_primary"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pb_status" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Need Help Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/bg_icon_blue"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_recent_status">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_rounded_square"
                        android:backgroundTint="@color/white"
                        android:padding="8dp"
                        android:src="@drawable/ic_gavel"
                        app:tint="@color/icon_blue" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Need Consulting?"
                            android:textColor="@color/brand_primary"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Talk to our legal experts."
                            android:textColor="@color/brand_text_light"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:minWidth="0dp"
                        android:paddingHorizontal="16dp"
                        android:text="Call"
                        android:textColor="@color/icon_blue"
                        app:cornerRadius="20dp"
                        app:strokeColor="@color/bg_icon_blue"
                        app:strokeWidth="1dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_primary"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_item_colors"
        app:itemTextColor="@color/nav_item_colors"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
