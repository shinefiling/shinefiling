<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <!-- Header Section (Deep Navy) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_primary"
        android:paddingBottom="24dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore Services"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            android:layout_marginStart="12dp"/>

        <!-- Search Bar -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_search_bar"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:hint="Search e.g. GST, Pvt Ltd"
            android:paddingHorizontal="16dp"
            android:textColor="#10232A"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/header_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Catalog -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Category: Start a Business -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start a Business"
                android:textColor="#10232A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Service Item 1: Pvt Ltd -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="12dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/ic_srv_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_business"
                            app:tint="@color/brand_accent"
                            android:background="@drawable/bg_circle_gold_light"
                            android:padding="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/tv_srv_1_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Private Limited Registration"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#10232A"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/ic_srv_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                         <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Best for startups. Raise funds easily."
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/ic_srv_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_srv_1_title"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹6,999"
                            android:textColor="@color/brand_accent"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/ic_srv_1"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- LLP Item -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="12dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/ic_srv_2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_users"
                            app:tint="@color/brand_accent"
                            android:background="@drawable/bg_circle_gold_light"
                            android:padding="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/tv_srv_2_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="LLP Registration"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#10232A"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/ic_srv_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                         <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Limited Liability Partnership."
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/ic_srv_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_srv_2_title"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹3,999"
                            android:textColor="@color/brand_accent"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/ic_srv_2"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <!-- Category: Tax & Compliance -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax &amp; Compliance"
                android:textColor="#10232A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                 <!-- GST Item -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="12dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/ic_srv_3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_chart"
                            app:tint="@color/icon_purple"
                            android:background="@drawable/bg_circle_gold_light"
                            android:padding="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/tv_srv_3_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="GST Registration"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#10232A"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/ic_srv_3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                         <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Get your GSTIN in 3-5 days."
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/ic_srv_3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_srv_3_title"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹1,499"
                            android:textColor="@color/brand_accent"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/ic_srv_3"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                 <!-- Income Tax Item -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="12dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/ic_srv_4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_calculator"
                            app:tint="@color/icon_green"
                            android:background="@drawable/bg_circle_gold_light"
                            android:padding="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/tv_srv_4_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Income Tax Application"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#10232A"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/ic_srv_4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                         <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Expert Assisted ITR Filing."
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/ic_srv_4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_srv_4_title"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹999"
                            android:textColor="@color/brand_accent"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/ic_srv_4"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
