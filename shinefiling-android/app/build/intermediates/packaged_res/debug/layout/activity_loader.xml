<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10232A">

    <!-- The "3D Cube" Representation -->
    <!-- We simulate it with a square card that we will rotate in Java -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cube_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#B58863"
        app:cardCornerRadius="4dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- Inner detailed border to look like structure -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:backgroundTint="#FFFFFF"/>

    </androidx.cardview.widget.CardView>

    <!-- Orbital Ring 1 (Horizontalish) -->
    <View
        android:id="@+id/ring_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_ring_thin"
        android:alpha="0.2"
        android:rotationX="70"
        app:layout_constraintBottom_toBottomOf="@+id/cube_view"
        app:layout_constraintEnd_toEndOf="@+id/cube_view"
        app:layout_constraintStart_toStartOf="@+id/cube_view"
        app:layout_constraintTop_toTopOf="@+id/cube_view" />

    <!-- Orbital Ring 2 (Verticalish) -->
    <View
        android:id="@+id/ring_2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/shape_ring_thin"
        android:alpha="0.2"
        android:rotationY="70"
        app:layout_constraintBottom_toBottomOf="@+id/cube_view"
        app:layout_constraintEnd_toEndOf="@+id/cube_view"
        app:layout_constraintStart_toStartOf="@+id/cube_view"
        app:layout_constraintTop_toTopOf="@+id/cube_view" />

    <!-- Loading Text -->
    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.2"
        android:text="LOADING SHINEFILING..."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cube_view" />

    <!-- Pulsing Dots -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <View
            android:alpha="0.8"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_circle_gold"
            android:layout_marginEnd="8dp"/>
        <View
            android:alpha="0.6"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_circle_gold"
            android:layout_marginEnd="8dp"/>
        <View
            android:alpha="0.4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_circle_gold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
